{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MkDocs deploy",
            "group": "build",
            "type": "shell",
            "command": "uv run mkdocs gh-deploy --force",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "MkDocs serve",
            "group": "build",
            "type": "shell",
            "command": "uv run mkdocs serve --dev-addr 127.0.0.1:8000 --dirty",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "focus": false
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "problemMatcher": []
        },
        {
            "label": "MkDocs serve (no dirty)",
            "group": "build",
            "type": "shell",
            "command": "uv run mkdocs serve --dev-addr 127.0.0.1:8000",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "MkDocs preview",
            "group": "build",
            "command": "${input:openSimpleBrowser}",
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "focus": false,
                "close": true,
                "clear": true
            },
            "runOptions": {
                "reevaluateOnRerun": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "openSimpleBrowser",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": "http://localhost:8000/lightnovel/spinor-helicity/"
        }
    ]
}
