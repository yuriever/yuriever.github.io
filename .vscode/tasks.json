{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MkDocs serve",
            "group": "build",
            "type": "shell",
            "command": "uv run mkdocs serve --dirty",
            "isBackground": true,
            "runOptions": {
                "reevaluateOnRerun": true
            },
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "echo": false,
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                {
                    "base": "$tsc",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Building documentation",
                        "endsPattern": "Serving"
                    }
                }
            ]
        },
        {
            "label": "MkDocs deploy",
            "group": "build",
            "type": "shell",
            "command": "uv run mkdocs gh-deploy --force",
            "problemMatcher": []
        },
        {
            "label": "MkDocs preview",
            "command": "${input:openSimpleBrowser}",
            "problemMatcher": []
        },
        {
            "label": "MkDocs serve/preview",
            "dependsOn": ["MkDocs serve", "MkDocs preview"],
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ],
    "inputs": [
        {
            "id": "openSimpleBrowser",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": "http://localhost:8000/"
        }
    ]
}
